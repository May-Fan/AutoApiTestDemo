<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name = "extentReportSuite">
    <test name="extentReportTest">
        <classes>
            <class name="cn.skio.apis.extentReport.TestReportDemo">
                <methods>
                    <include name="test1"/>
                    <include name="test2"/>
